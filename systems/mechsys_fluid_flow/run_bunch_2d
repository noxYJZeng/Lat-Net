
#!/bin/bash 
SIZE=$1
NUM_RUNS=$2
TEST=$3
COUNTER=0
until [  $COUNTER -gt $NUM_RUNS ]; do
  echo $COUNTER
  FLUIDDIR="/data/fluid_flow_$SIZE"
  FLUIDDIR+="x"
  FLUIDDIR+="$SIZE"
  FLUIDDIR+="_$TEST"
  mkdir $FLUIDDIR
  FLUIDDIR+="/sample_$COUNTER"
  mkdir $FLUIDDIR
  FLUIDDIR+="/fluid_flow"
  ./generate_fluid_flow_data_2d $SIZE $FLUIDDIR
  let COUNTER+=1
done

